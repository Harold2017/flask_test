pip install gunicorn
gunicorn manage:app

# get gunicorn process tree
pstree -ap|grep gunicorn
# restart gunicorn
kill -HUP xxxxx
# quit gunicorn
kill -9 xxxxx


sudo apt-get install nginx

vim /etc/nginx/sites-available/default

server {
  listen 80;
  server_name www.namihk.com;
  rewrite ^(.*) https://$host$1 permanent;
}

server {
  listen 443;
  server_name www.namihk.com;
  ssl on;
  ssl_certificate 1_www.namihk.com_bundle.crt;
  ssl_certificate 2_www.namihk.com.key;
  ssl_session_timeout 5m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:HIGH:!aNULL:!MD5:!RC4:!DHE;
  ssl_prefer_server_ciphers on;
  access_log logs/namihk.access.log;
  error_log logs/namihk.error.log;
  root var/www/html;
  index index.html;
  location / {
    try_files $url @gunicorn_proxy;
  }
  
  location @gunicorn_proxy {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://127.0.0.1:8000;
    proxy_connect_timeout 500s;
    proxy_read_timeout 500s;
    proxy_send_timeout 500s;
  }
  
  location ~ ^/(images|javascript|js|css|static|png|jpg|jpeg|bmp)/ {
    root .../app;
    access_log off;
    expires 30d;
  }
  
  error_page 500 502 503 504 /50x.html;
  location = /50x.html {
    root html;
  }
}

:w !sudo tee %

service nginx start
service nginx status

